# Copy to .env and adjust values. .env is gitignored.

# PostgreSQL (optional): use postgresql+asyncpg:// for SQLAlchemy (async).
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/market_pulse_dev

# Cloudant (IBM): URL and IAM API key from Cloudant service credentials.
CLOUDANT_URL=https://YOUR-ACCOUNT.cloudant.com
CLOUDANT_APIKEY=your-cloudant-iam-apikey
# Optional: database name (default: market_pulse_jobs)
# CLOUDANT_DB_NAME=market_pulse_jobs

# Adzuna API (free tier): https://developer.adzuna.com/
ADZUNA_APP_ID=your-app-id
ADZUNA_APP_KEY=your-app-key
